{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
      {
        "source": "/blog/preview/**",
        "destination": "/blog/preview/[id].html"
      },
      {
        "source": "/blog/**",
        "destination": "/blog/[slug].html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}