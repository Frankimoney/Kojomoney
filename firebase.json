{
  "firestore": {
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "trailingSlash": true,
    "rewrites": [
      {
        "source": "/blog/preview/**",
        "destination": "/blog/preview/[id]/index.html"
      },
      {
        "source": "/blog/**",
        "destination": "/blog/[slug]/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}