# =============================================================================
# Game Reward Providers
# =============================================================================
# Configure these when integrating game reward providers.
# Get credentials from each provider's dashboard.

# Gamezop (https://gamezop.com)
# Direct reward - 1:1 points
GAMEZOP_API_KEY=
GAMEZOP_WEBHOOK_SECRET=
GAMEZOP_APP_ID=
GAMEZOP_ENABLED=true
GAMEZOP_LAUNCH_URL=https://games.gamezop.com/play/{gameId}?userId={userId}&sessionToken={sessionToken}

# Adjoe Playtime (https://adjoe.io)
# Converts playtime seconds to points (default: 1 point per minute)
ADJOE_API_KEY=
ADJOE_WEBHOOK_SECRET=
ADJOE_APP_ID=
ADJOE_ENABLED=true
ADJOE_LAUNCH_URL=https://adj.st/playtime?userId={userId}&appId={appId}&sessionToken={sessionToken}

# Qureka Lite (https://qureka.com)
# Converts coins to points (default: 1 point per 10 coins)
QUREKA_API_KEY=
QUREKA_WEBHOOK_SECRET=
QUREKA_APP_ID=
QUREKA_ENABLED=true
QUREKA_LAUNCH_URL=https://qurekagames.com/play?userId={userId}&quizId={gameId}&token={sessionToken}

# Game session expiry in seconds (default: 300 = 5 minutes)
GAME_SESSION_EXPIRY_SECONDS=300
