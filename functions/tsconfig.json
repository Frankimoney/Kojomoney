{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es2020",
    "lib": ["es2020"],
    "outDir": "./lib",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
